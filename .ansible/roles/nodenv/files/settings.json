{
  "permissions": {
    "allow": [
      "Read(app/**)",
      "Read(config/**)",
      "Read(db/migrate/**)",
      "Read(Gemfile)",
      "Read(Gemfile.lock)",
      "Read(README.md)",
      "Read(lib/**)",
      "Glob(app/**)",
      "Glob(lib/**)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": [
      "Read(log/**)",
      "Read(tmp/**)",
      "Read(node_modules/**)",
      "Read(storage/**)",
      "Read(public/assets/**)",
      "Read(vendor/**)",
      "Read(db/schema.rb)",
      "Read(.env*)",
      "Read(**/.env*)",
      "Bash(git push origin*:*)"
    ]
  }
}
