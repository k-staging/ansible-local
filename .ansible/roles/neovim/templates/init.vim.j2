function! s:startup_tabs()
  " ファイル引数があるかどうかを記憶
  let l:has_file = argc() > 0

  " ファイル引数がある場合は、ClaudeCodeを新しいタブで開く
  if l:has_file
    tabnew
  endif

  " ClaudeCodeを起動（プラグインが完全に読み込まれるまで待つ）
  if exists(':ClaudeCode')
    ClaudeCode
  else
    " プラグインがまだロードされていない場合は、さらに待つ
    call timer_start(500, {-> s:retry_claude_toggle()})
  endif

  " 別タブでcommon.sqlを開く
  tabnew ~/.local/share/nvim/common.sql

  " さらに別タブでターミナルを全画面で開く
  tabnew
  terminal

  " ファイル引数がない場合のみ、最初のタブ（ClaudeCode）に戻る
  if !l:has_file
    tabfirst
  else
    " ファイル引数がある場合は、最初のタブ（開いたファイル）に戻る
    tabrewind
    stopinsert
  endif
endfunction

function! s:retry_claude_toggle()
  " リトライ時にClaudeCodeコマンドが存在するか確認
  if exists(':ClaudeCode')
    " 最初のタブに移動してから起動
    tabfirst
    ClaudeCode
  endif
endfunction
